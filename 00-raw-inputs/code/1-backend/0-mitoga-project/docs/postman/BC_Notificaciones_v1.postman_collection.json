{
  "info": {
    "name": "BC Notificaciones - MI-TOGA",
    "description": "Bounded Context de Notificaciones: Gestión de notificaciones push, email y en-app para usuarios",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8082",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "notificacionId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Consulta de Notificaciones",
      "item": [
        {
          "name": "1.1 Obtener Mis Notificaciones",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/mis-notificaciones?page=0&size=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "mis-notificaciones"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "20"
                }
              ]
            },
            "description": "Obtiene notificaciones del usuario autenticado (requiere Bearer Token)"
          },
          "response": []
        },
        {
          "name": "1.2 Obtener Notificaciones No Leídas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/no-leidas",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "no-leidas"]
            },
            "description": "Obtiene solo notificaciones no leídas"
          },
          "response": []
        },
        {
          "name": "1.3 Contar No Leídas",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/contar-no-leidas",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "contar-no-leidas"]
            },
            "description": "Obtiene contador de notificaciones no leídas (para badge)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Gestión de Notificaciones",
      "item": [
        {
          "name": "2.1 Marcar como Leída",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notificacionId\": \"{{notificacionId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/marcar-leida",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "marcar-leida"]
            },
            "description": "Marca una notificación específica como leída"
          },
          "response": []
        },
        {
          "name": "2.2 Marcar Todas como Leídas",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/marcar-todas-leidas",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "marcar-todas-leidas"]
            },
            "description": "Marca todas las notificaciones del usuario como leídas"
          },
          "response": []
        },
        {
          "name": "2.3 Eliminar Notificación",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/{{notificacionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "{{notificacionId}}"]
            },
            "description": "Elimina una notificación específica"
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Testing (Solo desarrollo)",
      "item": [
        {
          "name": "3.1 Enviar Notificación de Prueba",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"titulo\": \"Notificación de Prueba\",\n  \"mensaje\": \"Esta es una notificación de prueba del sistema\",\n  \"tipo\": \"INFO\",\n  \"prioridad\": \"MEDIA\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/notificaciones/enviar-prueba",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "notificaciones", "enviar-prueba"]
            },
            "description": "Envía notificación de prueba (solo disponible en desarrollo)"
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  }
}
