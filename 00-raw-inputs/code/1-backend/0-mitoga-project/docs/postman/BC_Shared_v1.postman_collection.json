{
  "info": {
    "name": "BC Shared - MI-TOGA",
    "description": "Bounded Context Compartido: Health checks, documentación API, actuators y utilidades generales",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "2.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8082",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health & Monitoring",
      "item": [
        {
          "name": "1.1 Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator/health",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "health"]
            },
            "description": "Estado general de salud de la aplicación (público)"
          },
          "response": []
        },
        {
          "name": "1.2 Application Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator/info",
              "host": ["{{baseUrl}}"],
              "path": ["actuator", "info"]
            },
            "description": "Información de la aplicación, versión y metadata"
          },
          "response": []
        },
        {
          "name": "1.3 Actuator Endpoints",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/actuator",
              "host": ["{{baseUrl}}"],
              "path": ["actuator"]
            },
            "description": "Lista de todos los endpoints de actuator disponibles"
          },
          "response": []
        }
      ]
    },
    {
      "name": "2. Documentación API",
      "item": [
        {
          "name": "2.1 Swagger UI",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/swagger-ui.html",
              "host": ["{{baseUrl}}"],
              "path": ["swagger-ui.html"]
            },
            "description": "Interfaz gráfica de Swagger (abrir en navegador)"
          },
          "response": []
        },
        {
          "name": "2.2 OpenAPI JSON",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api-docs",
              "host": ["{{baseUrl}}"],
              "path": ["api-docs"]
            },
            "description": "Especificación OpenAPI 3.0 en formato JSON"
          },
          "response": []
        },
        {
          "name": "2.3 OpenAPI YAML",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/yaml"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api-docs.yaml",
              "host": ["{{baseUrl}}"],
              "path": ["api-docs.yaml"]
            },
            "description": "Especificación OpenAPI 3.0 en formato YAML"
          },
          "response": []
        }
      ]
    },
    {
      "name": "3. Catalogos (Shared Domain)",
      "item": [
        {
          "name": "3.1 Buscar Árbol Completo",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/catalogos/arbol?tipo=MATERIA",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "catalogos", "arbol"],
              "query": [
                {
                  "key": "tipo",
                  "value": "MATERIA"
                }
              ]
            },
            "description": "Obtiene estructura jerárquica completa por tipo (público)"
          },
          "response": []
        },
        {
          "name": "3.2 Buscar Catálogos",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"tipo\": \"MATERIA\",\n  \"nivel\": 0,\n  \"activo\": true,\n  \"page\": 0,\n  \"size\": 20\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/catalogos/buscar",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "catalogos", "buscar"]
            },
            "description": "Búsqueda avanzada con filtros (público)"
          },
          "response": []
        },
        {
          "name": "3.3 Obtener por ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/catalogos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "catalogos", "1"]
            },
            "description": "Obtiene catálogo específico por ID (público)"
          },
          "response": []
        }
      ]
    },
    {
      "name": "4. Utilidades",
      "item": [
        {
          "name": "4.1 Ping (Conectividad)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/ping",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "ping"]
            },
            "description": "Endpoint simple para verificar conectividad"
          },
          "response": []
        }
      ]
    }
  ]
}
